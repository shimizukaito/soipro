generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model program_logs {
  id         Int       @id @default(autoincrement())
  user_id    String?
  language   String?
  code       String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
}

model ButtonLog {
  id        Int      @id @default(autoincrement())
  type      String
  timestamp DateTime
}

model Post {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  content    String
  theme      Int
  user       String
  output     String
  order      Int
  isLatest   Boolean  @default(true)
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  themes    Theme[]
}

model Theme {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @default("")   // 旧contentの役割
  sections    Json     @default("[]") // JSON配列を想定（セクション配列）
  createdAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}
